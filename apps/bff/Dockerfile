# Build the docker image with `npx nx docker-build bff`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t bff`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=1337

WORKDIR /app

RUN addgroup --system bff && \
  adduser --system -G bff bff

RUN echo $(ls ./)
COPY dist/apps/bff bff
RUN chown -R bff:bff .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN yarn --cwd bff --omit=dev -f install

CMD [ "node", "bff" ]
