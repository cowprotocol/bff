# syntax=docker/dockerfile:1.4
# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build notification-producer`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t notification-producer`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system notification-producer && \
          adduser --system -G notification-producer notification-producer

COPY dist/apps/notification-producer notification-producer
RUN chown -R notification-producer:notification-producer .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN --mount=type=secret,id=npmrc,target=/root/.npmrc,required=false \
  yarn --cwd notification-producer --omit=dev -f install

CMD [ "node", "notification-producer" ]
