# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build telegram`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t telegram`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system telegram && \
          adduser --system -G telegram telegram

COPY dist/apps/telegram telegram
RUN chown -R telegram:telegram .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix telegram --omit=dev -f install

CMD [ "node", "telegram" ]
